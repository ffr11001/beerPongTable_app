<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/black"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Table Master"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:typeface="serif"
        android:textStyle="bold|italic"
        android:textSize="35sp"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Frequency"
        android:id="@+id/textView2"
        android:layout_below="@+id/button7"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
        android:textSize="25sp"
        android:textStyle="bold|italic"
        android:typeface="serif"
        android:textColor="#ffffff" />

    <Button
        android:background="@drawable/button_background"
        android:layout_width="100sp"
        android:layout_height="50sp"
        android:text="R/B"
        android:id="@+id/button"
        android:onClick="Red_Blue"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10sp"
        android:layout_marginTop="10sp"
        android:textStyle="bold|italic"
        android:typeface="serif"
        android:textSize="15sp" />

    <Button
        android:background="@drawable/button_background"
        android:layout_width="100sp"
        android:layout_height="50sp"
        android:text="B/R"
        android:id="@+id/button2"
        android:onClick="Blue_Red"
        android:layout_alignTop="@+id/button3"
        android:layout_centerHorizontal="true"
        android:textStyle="bold|italic"
        android:typeface="serif"
        android:textSize="15sp" />

    <Button
        android:background="@drawable/button_background"
        android:layout_width="100sp"
        android:layout_height="50sp"
        android:text="G/G"
        android:id="@+id/button3"
        android:onClick="Green_Green"
        android:layout_below="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="10sp"
        android:layout_marginTop="10sp"
        android:textStyle="bold|italic"
        android:typeface="serif"
        android:textSize="15sp" />

    <Button
        android:background="@drawable/button_background"
        android:layout_width="100sp"
        android:layout_height="50sp"
        android:text="CLOSE"
        android:id="@+id/button4"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="Close"
        android:textStyle="bold|italic"
        android:typeface="serif"
        android:textSize="15sp" />

    <Button
        android:background="@drawable/button_background"
        android:layout_width="100sp"
        android:layout_height="50sp"
        android:text="EVENT"
        android:id="@+id/button5"
        android:onClick="Event"
        android:layout_below="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10sp"
        android:layout_marginTop="10sp"
        android:textStyle="bold|italic"
        android:typeface="serif"
        android:textSize="15sp" />

    <Button
        android:background="@drawable/button_background"
        android:layout_width="100sp"
        android:layout_height="50sp"
        android:text="TAKE TURN"
        android:id="@+id/button6"
        android:onClick="Take_Turn"
        android:layout_alignTop="@+id/button7"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="10sp"
        android:textStyle="bold|italic"
        android:typeface="serif"
        android:textSize="15sp" />

    <Button
        android:background="@drawable/button_background"
        android:layout_width="100sp"
        android:layout_height="50sp"
        android:text="Overload"
        android:id="@+id/button7"
        android:onClick="Madness"
        android:layout_alignTop="@+id/button5"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2"
        android:layout_marginBottom="10sp"
        android:textStyle="bold|italic"
        android:typeface="serif"
        android:textSize="15sp" />

    <Button
        android:id="@+id/button8"
        android:layout_width="100sp"
        android:layout_height="50sp"
        android:layout_below="@+id/seekBar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        android:background="@drawable/button_background"
        android:onClick="fadeInput"
        android:text="Fade"
        android:textSize="15sp"
        android:textStyle="bold|italic"
        android:typeface="serif" />

    <Button
        android:id="@+id/button9"
        android:layout_width="100sp"
        android:layout_height="50sp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/seekBar"
        android:layout_marginTop="10sp"
        android:background="@drawable/button_background"
        android:onClick="auxInput"
        android:text="AUX"
        android:textSize="15sp"
        android:textStyle="bold|italic"
        android:typeface="serif" />

    <Button
        android:id="@+id/button10"
        android:layout_width="100sp"
        android:layout_height="50sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/seekBar"
        android:layout_marginTop="10sp"
        android:background="@drawable/button_background"
        android:elevation="0dp"
        android:onClick="staticInput"
        android:text="Static"
        android:textSize="15sp"
        android:textStyle="bold|italic"
        android:typeface="serif" />

    <Button
        android:id="@+id/button11"
        android:layout_width="150sp"
        android:layout_height="50sp"
        android:layout_below="@+id/button10"
        android:layout_marginTop="10sp"
        android:layout_toEndOf="@+id/button10"
        android:layout_toRightOf="@+id/button10"
        android:background="@drawable/button_background"
        android:onClick="resetInput"
        android:text="Reset"
        android:textSize="15sp"
        android:textStyle="bold|italic"
        android:typeface="serif" />

    <Button
        android:background="@drawable/button_background"
        android:layout_width="150sp"
        android:layout_height="50sp"
        android:text="Settings"
        android:id="@+id/button12"
        android:textStyle="bold|italic"
        android:typeface="serif"
        android:textSize="15sp"
        android:layout_alignBottom="@+id/button11"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="Settings"
        android:visibility="gone" />

    <SeekBar
        android:layout_width="fill_parent"
        android:layout_height="50sp"
        android:id="@+id/seekBar"
        android:max="9"
        android:progressDrawable="@drawable/progress"
        android:background="@drawable/background"
        android:thumb="@drawable/thumb"
        android:layout_below="@+id/textView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
