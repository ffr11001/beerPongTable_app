<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="14dp" />
            <size   android:width="270dp"   android:height="60dp" />
            <stroke android:width="1dip" android:color="#FFC8C8C8" />
            <gradient android:angle="-90" android:startColor="#FFC8C8C8" android:endColor="#FFC8C8C8"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="14dp" />
            <size   android:width="270dp"   android:height="60dp" />
            <stroke android:width="1dip" android:color="#FFC8C8C8" />
            <solid android:color="#58857e"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="14dp" />
            <size   android:width="270dp"   android:height="60dp" />
            <stroke android:width="1dip" android:color="#FFFFFFFF" />
            <gradient android:angle="-90" android:startColor="#FFFFFFFF" android:endColor="#FFFFFFFF" />
        </shape>
    </item>
</selector>
